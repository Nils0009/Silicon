@model SignUpViewModel

<section id="signUp-section">
    <div class="container">
        <div class="signUp-text">
            <h1>@Model.InnerTitle</h1>
            <p>@Model.Text<a asp-controller="Auth" asp-action="SignIn"> Sign in here.</a></p>
        </div>

        <form id="signUpForm" method="post" asp-controller="Auth" asp-action="SignUp" novalidate>
            <div class="fullname">
                <div class="firstName">
                    <label asp-for="@Model.Form.FirstName"></label>
                    <span asp-validation-for="@Model.Form.FirstName"></span>
                    <input asp-for="@Model.Form.FirstName" />
                </div>

                <div class="lastName">
                    <label asp-for="@Model.Form.LastName"></label>
                    <span asp-validation-for="@Model.Form.LastName"></span>
                    <input asp-for="@Model.Form.LastName" />
                </div>
            </div>

            <label asp-for="@Model.Form.EmailAddress"></label>
            <span asp-validation-for="@Model.Form.EmailAddress"></span>
            <input asp-for="@Model.Form.EmailAddress" />

            <label asp-for="@Model.Form.Password"></label>
            <span asp-validation-for="@Model.Form.Password"></span>
            <input asp-for="@Model.Form.Password" />

            <label asp-for="@Model.Form.ConfirmPassword"></label>
            <span asp-validation-for="@Model.Form.ConfirmPassword"></span>
            <input asp-for="@Model.Form.ConfirmPassword" />

            <div class="signUp-checkbox">
                <input asp-for="@Model.Form.TermsAndConditions" />
                <label asp-for="@Model.Form.TermsAndConditions">I agree to the <a asp-controller="About" asp-action="Index">Terms</a> & <a asp-controller="About" asp-action="Index">Conditions</a></label>
                <span asp-validation-for="@Model.Form.TermsAndConditions"></span>
            </div>

            <button class="btn-theme" type="submit">@Model.Title</button>

        </form>
    </div>
</section>
@await Html.PartialAsync("/Views/Shared/_ValidationScript.cshtml")