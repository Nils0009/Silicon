@model ContactEmailViewModel

<div class="email-info">
    <img src="@Model.Image.ImageUrl" alt="@Model.Image.AltText">
    <div class="email-info-text">
        <h5>@Model.Title</h5>
        <p>@Model.Description</p>
        <a asp-action="@Model.Link.ActionName" asp-controller="@Model.Link.ControllerName">@Model.Link.Text<i class="fa-solid fa-arrow-right"></i></a>
    </div>
</div>