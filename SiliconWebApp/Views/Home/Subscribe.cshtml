@using Infrastructure.Models
@model NewsletterSubscriptionRegistrationModel


<section class="subscribe">
    <div class="container">
        <div class="section-title">
            <h1>Don't Want to Miss Anything?</h1>
            <img src="~/images/subscribe-img.svg" alt="">
        </div>
        <div class="signup-content">
            <h5>Sign up for Newsletters</h5>
            <form asp-action="Subscribe" asp-controller="Home" method="post">
                <div class="checkbox-content">

                    <div class="ch-b">
                        <input asp-for="DailyNewsletter" />
                        <label asp-for="DailyNewsletter"></label>
                    </div>
                    <div class="ch-b">
                        <input asp-for="AdvertisingUpdates" />
                        <label asp-for="AdvertisingUpdates"></label>
                    </div>

                    <div class="ch-b">
                        <input asp-for="WeekInReview" />
                        <label asp-for="WeekInReview"></label>
                    </div>

                    <div class="ch-b">
                        <input asp-for="EventUpdates" />
                        <label asp-for="EventUpdates"></label>
                    </div>

                    <div class="ch-b">
                        <input asp-for="StartupsWeekly" />
                        <label asp-for="StartupsWeekly"></label>
                    </div>

                    <div class="ch-b">
                        <input asp-for="Podcasts" />
                        <label asp-for="Podcasts"></label>
                    </div>
                </div>

                <div class="signup-email">
                    <input asp-for="Email" />
                    <button type="submit" class="btn-theme">Subscribe *</button>
                </div>
                <p>* Yes, I agree to the terms and privacy policy.</p>
                <span class="information">
                    @if (ViewData["Status"]?.ToString() == "Success")
                    {
                        <span class="alert alert-success">
                            You have been subscribed
                        </span>
                    }

                    @if (ViewData["Status"]?.ToString() == "AlreadyExists")
                    {
                        <span class="alert alert-warning">
                            You have already subscribed
                        </span>
                    }

                    @if (ViewData["Status"]?.ToString() == "Invalid")
                    {
                        <span class="alert alert-danger">
                            You must enter a valid email address
                        </span>
                    }

                    @if (ViewData["Status"]?.ToString() == "ConnectionFailed")
                    {
                        <span class="alert alert-danger">
                            Unable to contact the server. Please try again later.
                        </span>
                    }
                </span>
            </form>

        </div>
    </div>
</section>