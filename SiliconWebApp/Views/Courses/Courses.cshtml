@model IEnumerable<CourseEntity>

@{
    ViewData["Title"] = "Courses";
}

<section class="courses-showcase">
    <div class="container">
        <div class="courses-showcase-top">
            <div class="top-text">
                <ul class="breadcrumb">
                    <li><i class="fa-solid fa-house"></i><a href="index.html">Home</a></li>
                    <li class="active"><i class="fa-solid fa-angles-right"></i>Courses</li>
                </ul>
                <h1>Courses</h1>
            </div>

            <div class="courses-showcase-search">
                <button class="dropbtn" onclick="toggleDropdown()">All categories <i class="fa-solid fa-chevron-down"></i></button>
                <div class="dropdown-content" id="myDropdown">
                    <a href="#">Category 1</a>
                    <a href="#">Category 2</a>
                    <a href="#">Category 3</a>
                </div>
                <div class="searchbar-content">
                    <input type="text" placeholder="Search courses">
                    <i class="fa-solid fa-magnifying-glass"></i>
                </div>
            </div>
        </div>
        <div class="courses-showcase-content">
            
            @foreach(var course in Model)
            {
                <div class="courses-box">
                    <div class="courses-box-top">
                        <p>@course.IsBestSeller</p>
                        <div class="box-top-img">
                            <img src="Images/courses-img-icon.svg" alt="">
                        </div>
                    </div>

                    <a href="CourseDescription.html"><img src="~/images/@course.ImgUrl" alt=""></a>

                    <div class="courses-text">
                        <h5>@course.Title</h5>
                        <p>@course.Author</p>
                    </div>
                    <div class="prices">
                        <p>@course.Price</p>
                    </div>
                    <div class="hour-rating">
                        <p><i class="fa-regular fa-clock"></i>@course.Hours</p>
                        <p><i class="fa-regular fa-thumbs-up"></i>@course.LikesInProcent</p>
                    </div>
                </div>
            }

        </div>
        <div class="courses-showcase-content"></div>
        <div class="courses-slide-btn">

            <button class="slide-btn btn-gray" onclick="plusDivs(-1)">❮</button>
            <button class="slide-btn btn-gray" onclick="currentDiv(2)">1</button>
            <button class="slide-btn btn-gray" onclick="currentDiv(3)">2</button>
            <button class="slide-btn btn-gray" onclick="currentDiv(4)">3</button>
            <button class="slide-btn btn-gray" onclick="plusDivs(1)">❯</button>
        </div>
    </div>
</section>